  <modelVersion>4.0.0</modelVersion>
  <groupId>com.xingcloud</groupId>
  <artifactId>WebInterface</artifactId>
  <packaging>war</packaging>
  <version>1.0</version>
  <name>DataDriller web interface</name>
  <url>http://65.255.35.141:${tport}</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>warn</checksumPolicy>
      </releases>
      <id>xamavenrepo</id>
      <name>xamavenrepo</name>
      <url>http://xamavenrepo:8044/archiva/repository/internal</url>
      <layout>default</layout>
    </repository>
    <repository>
      <id>cloudera</id>
      <url>https://repository.cloudera.com/artifactory/cloudera-repos/</url>
    </repository>
  </repositories>

  <profiles>
    <!-- Local debug -->
    <profile>
      <id>local_debug</id>
      <activation>
        <property>
          <name>xa_env</name>
          <value>local_debug</value>
        </property>
      </activation>
      <repositories>
        <repository>
          <id>local_debug_repo</id>
          <url>file://d:/local_repo/repository</url>
        </repository>
      </repositories>
    </profile>
    <!-- pre-production -->
    <profile>
      <id>pre_production</id>
      <activation>
        <property>
          <name>xa_env</name>
          <value>pre_production</value>
        </property>
      </activation>
      <repositories>
        <repository>
          <id>pre_production_repo</id>
          <url>file:///home/hadoop/local_repo/pre_production</url>
        </repository>
      </repositories>
    </profile>
    <!-- Production -->
    <profile>
      <id>production</id>
      <activation>
        <property>
          <name>xa_env</name>
          <value>production</value>
        </property>
      </activation>
      <repositories>
        <repository>
          <id>production_repo</id>
          <url>file:///home/hadoop/local_repo/production</url>
        </repository>
      </repositories>
    </profile>
  </profiles>
  <!-- Building config -->
  <build>
    <defaultGoal>package</defaultGoal>

    <finalName>${aid}</finalName>

    <!-- Resources of app -->
    <resources>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>*.*</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.basedir}/src/main/resources/${xa_env}/</directory>
      </resource>
    </resources>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <version>2.1.1</version>
          <configuration>
            <packagingExcludes>WEB-INF/web.xml</packagingExcludes>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

